<%= form_for(@article, html: {multipart: true}) do |f| %>
  <ul>
  <% @article.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <div class="form-group">
    <%= f.label :please_select_a_Borough%>
    <%= f.select(:category, options_for_select([['Brooklyn'], ['Manhattan'],['Bronx'],['Queens'],['Staten Island']]),{}, {class: "form-control"}) %>
  </div>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </p>
  <p>
    <%= f.label :please_desribe_the_location %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :tag_list %><%= ' (comma separated)' %><br />
    <%= f.text_field :tag_list %>
  </p>
  <p>
    <% if @article.image.exists? %>
        <%= image_tag @article.image.url %><br/>
    <% end %>
    <%= f.label :image, "Attach a New Image" %><br />
    <%= f.file_field :image %>
  </p>

  <%= f.submit %>

<% end %>
